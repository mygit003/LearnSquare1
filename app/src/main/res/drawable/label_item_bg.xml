<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 单击时的背景颜色 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/bgColorThird"/>

            <corners
                android:radius="15dp"/>
        </shape>

    </item>
    <!-- 未单击时的背景颜色 -->
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/bgColorThird"/>

            <corners
                android:radius="15dp"/>
        </shape>
    </item>

</selector>