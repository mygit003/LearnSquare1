<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/item_pdding"
    android:paddingTop="@dimen/item_pdding">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/text_grey"
        android:textStyle="bold" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/lv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pdding"
        app:labelBackground="@drawable/label_item_bg"
        app:labelTextColor="@color/text_black"
        app:labelTextPaddingBottom="4dp"
        app:labelTextPaddingLeft="10dp"
        app:labelTextPaddingRight="10dp"
        app:labelTextPaddingTop="4dp"
        app:labelTextSize="13sp"
        app:lineMargin="16dp"
        app:selectType="NONE"
        app:wordMargin="10dp" />


</LinearLayout>